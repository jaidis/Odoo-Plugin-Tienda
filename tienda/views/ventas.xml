<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <act_window id="tienda_ventas_action" name="ventas"
                    res_model="tienda.ventas"/>

        <record id="tienda_ventas_view_tree" model="ir.ui.view">
            <field name="name">Lista ventas</field>
            <field name="model">tienda.ventas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cod"/>
                    <field name="fecha_venta"/>
                    <field name="descripcion"/>
                    <field name="cliente"/>
                    <field name="articulo"/>
                    <field name="precio"/>
                    <field name="cantidad"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>

        <record id="tienda_clientes_view_form" model="ir.ui.view">
            <field name="name">Formulario de ventas</field>
            <field name="model">tienda.ventas</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="cod"/>
                        <field name="fecha_venta"/>
                        <field name="descripcion"/>
                        <field name="cliente"/>
                        <field name="articulo"/>
                        <field name="precio"/>
                        <field name="cantidad"/>
                        <field name="total"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="tienda_ventas_view_search" model="ir.ui.view">
            <field name="name">Busqueda ventas</field>
            <field name="model">tienda.ventas</field>
            <field name="arch" type="xml">
                <search>
                    <field name="cod"/>
                    <field name="fecha_venta"/>
                    <field name="descripcion"/>
                    <field name="cliente"/>
                    <field name="articulo"/>
                    <field name="precio"/>
                    <field name="cantidad"/>
                    <field name="total"/>
                </search>
            </field>
        </record>
        <menuitem name="Tienda" id="tienda_ventas" sequence="10"/>
        <menuitem name="Inicio" id="menu_inicio" parent="tienda_ventas" sequence="10"/>
        <menuitem name="Ventas" id="ventas" action="tienda_ventas_action" parent="menu_inicio"
                  sequence="10"/>

    </data>
</odoo>